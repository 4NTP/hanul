{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "generated/prisma/**/*",
        "outDir": "./dist/src",
        "watchAssets": true
      },
      {
        "include": "generated/prisma/schema.prisma",
        "outDir": "./dist/src",
        "watchAssets": true
      },
      {
        "include": "generated/prisma/**/*",
        "outDir": "./dist/src"
      }
    ]
  },
  "watchOptions": {
    "watchExclude": [
      "src/generated/**/*",
      "src/generated/*",
      "**/generated/**/*",
      "**/*.spec.ts"
    ]
  }
}
